@model OrdersTableViewModel

<div>
	@using (Html.BeginForm("Index", "Orders", Model.Filter, FormMethod.Get))
	{
		<div class="row">
			<div class="col-5">
				<label class="control-label">From</label>
				@Html.EditorFor(model => model.Filter.From, new { htmlAttributes = new { @class = "form-control" } } )
			</div>

			<div class="col-5">
				<label class="control-label">To</label>
				@Html.EditorFor(model => model.Filter.To, new { htmlAttributes = new { @class = "form-control" } } )
			</div>

			<button class="btn btn-secondary col-2">Search</button>
		</div>

		<div class="row mt-2 mb-2">
			<div class="col-3">
				<label class="control-label">Order Number</label>
				<div class="editor-field">
					@Html.DropDownListFor(model => model.Filter.OrdersNumber, ViewBag.OrdersNumbers as SelectList )
				</div>
			</div>

			<div class="col-3">
				<label class="control-label">Provider</label>
				<div class="editor-field">
					@Html.DropDownListFor(model => model.Filter.Provider, ViewBag.Providers as SelectList )
				</div>
			</div>

			<div class="col-3">
				<label class="control-label">Order Item Name</label>
				<div class="editor-field">
					@Html.DropDownListFor(model => model.Filter.OrderItemsName, ViewBag.OrderItemsNames as SelectList )
				</div>
			</div>

			<div class="col-3">
				<label class="control-label">Order Item Unit</label>
				<div class="editor-field">
					@Html.DropDownListFor(model => model.Filter.OrderItemsUnit, ViewBag.OrderItemsUnits as SelectList )
				</div>
			</div>
		</div>
	}

	<h5 class="mt-4">Orders</h5>

	<a asp-action="Edit" class="btn btn-primary mb-2">Create New Order</a>

	<table class="table table-borderless">
		<thead>
			<tr>
				<th>Number</th>
				<th>Provider</th>
				<th>Date</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var order in Model.Orders)
			{
				<tr>
					<td>@order.Number</td>
					<td>@order.Provider</td>
					<td>@order.Date.ToLongDateString()</td>
					<td><a asp-action="Details" asp-route-id="@order.Id" class="btn btn-light">Details</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>
