@model OrderViewModel

<div>
	<h4>Order: @Model.Number</h4>

	<div>
		<table class ="table table-borderless">
			<tr>
				<td class="w-25"><label>Provider:</label></td>
				<td><label>@Model.ProviderId</label></td>
			</tr>
			<tr>
				<td><label>Date:</label></td>
				<td><label>@Model.Date.ToString("f")</label></td>
			</tr>
		</table>
	</div>

	<div>
		<table class="table table-borderless">
			<thead>
				<tr>
					<th>Name</th>
					<th>Unit</th>
					<th>Quantity</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model.OrderItems)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.Unit</td>
						<td>@item.Quantity</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

	<div>
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
		<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
	</div>
</div>
